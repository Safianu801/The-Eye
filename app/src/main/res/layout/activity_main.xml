<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bgggg">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:id="@+id/mainTxt"
          android:orientation="vertical">


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:text="THE i"
              android:textColor="#C8C7C7"
              android:textSize="30sp"
              android:textStyle="bold" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="For educational purpose"
              android:textAlignment="center"
              android:textColor="#C8C7C7"
              android:textSize="18sp"
              android:textStyle="bold" />

      </LinearLayout>

      <RelativeLayout
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_below="@id/mainTxt"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="80dp"
          android:background="@drawable/main_button_2">


          <RelativeLayout
              android:layout_width="85dp"
              android:layout_height="85dp"
              android:layout_centerInParent="true"
              android:id="@+id/nextBtn"
              android:background="@drawable/main_button_style">

              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:src="@drawable/baseline_chevron_right_24"
                  android:layout_centerInParent="true"/>

          </RelativeLayout>

      </RelativeLayout>


  </RelativeLayout>


</RelativeLayout>